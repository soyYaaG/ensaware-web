---
import { Image } from "astro:assets";
import { FormInput } from "lucide-react";
import Layout from "../../layouts/Layout.astro";
import loginEnsaware from "../../assets/images/login-ensaware.jpg";
import logoAmericana from "../../assets/images/logo-americana.png";
import { Login } from "../../components";
import { getLangFromUrl, type Pages, useTranslations } from "../../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { index } = t("pages") as Pages;
---

<Layout title={index.title}>
	<main class="h-screen flex flex-row">
		<aside class="hidden md:flex w-1/2">
			<Image
				class="object-cover w-full;"
				src={loginEnsaware}
				alt="Un móvil con un código QR sostenido por una persona en su mano."
			/>
		</aside>

		<section
			class="flex flex-col items-center justify-center p-4 w-full md:w-1/2"
		>
			<h1 class="text-5xl mb-10">Ensaware</h1>

			<div
				class="flex flex-row mb-10 text-3xl text-gray-700 items-center"
			>
				<FormInput className="mr-4" />
				<h2>{index.login}</h2>
			</div>

			<Image
				class="mb-10"
				height="250"
				src={logoAmericana}
				alt="Logo de la Corporación Universitaria Americana."
				width="250"
			/>

			<p class="mb-10">{index.description}</p>

			<Login client:only />
		</section>
	</main>
</Layout>
